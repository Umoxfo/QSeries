<?xml version="1.0"?>
<PropertyList>

	<path>lg-panel.ac</path>
	
	<!--Interior effect-->
	<effect>
		<inherits-from>Aircraft/Q400/Models/Effects/interior/interior-shadow</inherits-from>
		<object-name>aibase</object-name>
		<object-name>aibase2</object-name>
		<object-name>base</object-name>
		<object-name>bases2</object-name>
		<object-name>handle</object-name>
		<object-name>screws</object-name>
	</effect>
	
	
<!---->

<animation>
	<type>pick</type>
	<object-name>handle</object-name>
	<visible>true</visible>
	<action>
		<button>0</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-toggle</command>
			<property>controls/gear/gear-down</property>
		</binding>
	</action>
</animation> 

<animation>
		<type>rotate</type>
		<object-name>handle</object-name>
		<property>controls/gear/gear-down</property>
		<factor>40</factor>

		<center>
			<x-m>-12.3255</x-m>
			<z-m>2.1901</z-m>
		</center>

		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>

	</animation>
        <!--Illuminate Indicators-->
        <!--Gear Doors-->
        <animation>
        <type>material</type>
	<object-name>L.door</object-name>
        <condition>
            <and>
                <greater-than>
                    <property>/gear/gear[1]/position-norm</property>
                    <value>0.05</value>
                </greater-than>
                <less-than>
                    <property>/gear/gear[1]/position-norm</property>
                    <value>0.95</value>
                </less-than>
		<greater-than>
			<property>/systems/electrical/volts</property>
			<value>15</value>
		</greater-than>
            </and>
        </condition>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
        </emission>
    </animation>
        <animation>
        <type>material</type>
	<object-name>N.door</object-name>
        <condition>
            <and>
                <greater-than>
                    <property>/gear/gear[0]/position-norm</property>
                    <value>0.05</value>
                </greater-than>
                <less-than>
                    <property>/gear/gear[0]/position-norm</property>
                    <value>0.95</value>
                </less-than>
		<greater-than>
			<property>/systems/electrical/volts</property>
			<value>15</value>
		</greater-than>
            </and>
        </condition>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
        </emission>
    </animation>
<animation>
        <type>material</type>
	<object-name>R.door</object-name>
        <condition>
            <and>
                <greater-than>
                    <property>/gear/gear[2]/position-norm</property>
                    <value>0.05</value>
                </greater-than>
                <less-than>
                    <property>/gear/gear[2]/position-norm</property>
                    <value>0.95</value>
                </less-than>
		<greater-than>
			<property>/systems/electrical/volts</property>
			<value>15</value>
		</greater-than>
            </and>
        </condition>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
        </emission>
    </animation>
    <!--Gear Fully Down-->
        <animation>
        <type>material</type>
	<object-name>leftgreen</object-name>
        <condition>
                <equals>
                    <property>/gear/gear[1]/position-norm</property>
                    <value>1</value>
                </equals>
		<greater-than>
			<property>/systems/electrical/volts</property>
			<value>15</value>
		</greater-than>
        </condition>
        <emission>
            <red>0.4</red>
            <green>1</green>
            <blue>0.4</blue>
        </emission>
    </animation>
        <animation>
        <type>material</type>
	<object-name>nosegreen</object-name>
        <condition>
                <equals>
                    <property>/gear/gear[0]/position-norm</property>
                    <value>1</value>
                </equals>
		<greater-than>
			<property>/systems/electrical/volts</property>
			<value>15</value>
		</greater-than>
        </condition>
        <emission>
            <red>0.4</red>
            <green>1</green>
            <blue>0.4</blue>
        </emission>
    </animation>
<animation>
        <type>material</type>
	<object-name>rightgreen</object-name>
        <condition>
                <equals>
                    <property>/gear/gear[2]/position-norm</property>
                    <value>1</value>
                </equals>
		<greater-than>
			<property>/systems/electrical/volts</property>
			<value>15</value>
		</greater-than>
        </condition>
        <emission>
            <red>0.4</red>
            <green>1</green>
            <blue>0.4</blue>
        </emission>
    </animation>
    
    <!--Gear Not Fully Down-->
        <animation>
        <type>material</type>
	<object-name>leftred</object-name>
        <condition><and>
                <not-equals>
                    <property>/gear/gear[1]/position-norm</property>
                    <value>1</value>
                </not-equals>
                <not-equals>
                    <property>/gear/gear[1]/position-norm</property>
                    <value>0</value>
                </not-equals>
		<greater-than>
			<property>/systems/electrical/volts</property>
			<value>15</value>
		</greater-than>
            </and>
        </condition>
        <emission>
            <red>1</red>
            <green>0.4</green>
            <blue>0.4</blue>
        </emission>
    </animation>
        <animation>
        <type>material</type>
	<object-name>nosered</object-name>
        <condition><and>
                <not-equals>
                    <property>/gear/gear[0]/position-norm</property>
                    <value>1</value>
                </not-equals>
                <not-equals>
                    <property>/gear/gear[0]/position-norm</property>
                    <value>0</value>
                </not-equals>
		<greater-than>
			<property>/systems/electrical/volts</property>
			<value>15</value>
		</greater-than>
            </and>
        </condition>
        <emission>
            <red>1</red>
            <green>0.4</green>
            <blue>0.4</blue>
        </emission>
    </animation>
<animation>
        <type>material</type>
	<object-name>rightred</object-name>
        <condition><and>
                <not-equals>
                    <property>/gear/gear[2]/position-norm</property>
                    <value>1</value>
                </not-equals>
                <not-equals>
                    <property>/gear/gear[2]/position-norm</property>
                    <value>0</value>
                </not-equals>
		<greater-than>
			<property>/systems/electrical/volts</property>
			<value>15</value>
		</greater-than>
            </and>
        </condition>
        <emission>
            <red>1</red>
            <green>0.4</green>
            <blue>0.4</blue>
        </emission>
    </animation>
    
    
    <!--Hydraulic Control-->
<animation>
	<type>pick</type>
	<object-name>stbyhydpress</object-name>
	<visible>true</visible>
	<action>
		<button>0</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-toggle</command>
			<property>controls/hydraulic/spu_sw</property>
		</binding>
	</action>
</animation>
<animation>
<type>texmultiple</type>
<object-name>stbyhydpress</object-name>
    <transform>
        <condition>
            <greater-than>
                <property>systems/electrical/volts</property>
                <value>15</value>
            </greater-than>
        </condition>
      <subtype>textranslate</subtype>
      <property>controls/hydraulic/spu_act</property>
      <factor> 0.127 </factor>
      <axis>
        <x> 1 </x>
        <y> 0 </y>
        <z> 0 </z>
      </axis>
    </transform>
</animation>  

<animation>
	<type>pick</type>
	<object-name>ptucntrl</object-name>
	<visible>true</visible>
	<action>
		<button>0</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-toggle</command>
			<property>controls/hydraulic/ptu</property>
		</binding>
	</action>
</animation>
<animation>
<type>texmultiple</type>
	<object-name>ptucntrl</object-name>
    <transform>
        <condition>
            <greater-than>
                <property>systems/electrical/volts</property>
                <value>15</value>
            </greater-than>
        </condition>
      <subtype>textranslate</subtype>
      <property>controls/hydraulic/ptu</property>
      <factor> 0.127 </factor>
      <axis>
        <x> 1 </x>
        <y> 0 </y>
        <z> 0 </z>
      </axis>
    </transform>
</animation>    

<animation>
	<type>pick</type>
	<object-name>hyd3isolvlv</object-name>
	<visible>true</visible>
	<action>
		<button>0</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-toggle</command>
			<property>controls/hydraulic/isol-valve-btn3</property>
		</binding>
	</action>
</animation>
<animation>
<type>texmultiple</type>
	<object-name>hyd3isolvlv</object-name>
    <transform>
        <condition>
            <greater-than>
                <property>systems/electrical/volts</property>
                <value>15</value>
            </greater-than>
        </condition>
      <subtype>textranslate</subtype>
      <property>controls/hydraulic/isol-valve3</property>
      <factor> 0.127 </factor>
      <axis>
        <x> 1 </x>
        <y> 0 </y>
        <z> 0 </z>
      </axis>
    </transform>
</animation>    
</PropertyList>
