<?xml version="1.0" encoding="ISO-8859-1"?>
<PropertyList>
	<path>sidepanel.pilot.ac</path>
	<effect>
		<inherits-from>../../../Effects/panel</inherits-from>
		<object-name>pilot.base</object-name>
		<object-name>pilot.screws</object-name>
		<object-name>pilot.lighted</object-name>
	</effect>
	<animation><!--TODO correct lighting property-->
		<type>material</type>
		<object-name>pilot.lighted</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/volts</property>
				<value>10</value>
			</greater-than>		
		</condition>
		<emission>
		<red>   0.50 </red>
		<green> 0.25 </green>
		<blue>  0.25 </blue>
		</emission>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>pltflt.knob</object-name>
		<property>/controls/lighting/panel/plt-flt</property>
		<factor>-250</factor>
		<center>
			<x-m>-0.002199</x-m>
			<y-m> 0.077172 </y-m>
		</center>
		<axis>
			<x> 0 </x>
			<y> 0 </y>
			<z> 1 </z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>/controls/lighting/panel/plt-flt</property>
				<factor>0.05</factor>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>ovspdtest.switch</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/ovspd-horn/test</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>instrumentation/ovspd-horn/test</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/ovspd-horn/test</property>
				<value>-1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>instrumentation/ovspd-horn/test</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>ovspdtest.switch</object-name>
		<property>instrumentation/ovspd-horn/test</property>
		<factor>20</factor>
		<center>
			<y-m> -0.058669 </y-m>
			<z-m>  0.004567 </z-m>
		</center>
		<axis>
			<x> -1 </x>
			<y>  0 </y>
			<z>  0 </z>
		</axis>
	</animation>
</PropertyList>
