<?xml version="1.0" encoding="ISO-8859-1"?>
<PropertyList>
	<path>sidepanel.copilot.ac</path>
	<effect>
		<inherits-from>../../Effects/panel</inherits-from>
		<object-name>copilot.base</object-name>
		<object-name>copilot.screws</object-name>
		<object-name>copilot.lighted</object-name>
	</effect>
	<animation><!--TODO correct lighting property-->
		<type>material</type>
		<object-name>copilot.lighted</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/volts</property>
				<value>10</value>
			</greater-than>		
		</condition>
		<emission>
		<red>   0.50 </red>
		<green> 0.25 </green>
		<blue>  0.25 </blue>
		</emission>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>copflt.knob</object-name>
		<property>/controls/lighting/panel/cop-flt</property>
		<factor>-250</factor>
		<center>
			<x-m>-0.030633</x-m>
			<y-m>-0.007847</y-m>
		</center>
		<axis>
			<x> 0 </x>
			<y> 0 </y>
			<z> 1 </z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>/controls/lighting/panel/cop-flt</property>
				<factor>0.05</factor>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
</PropertyList>
