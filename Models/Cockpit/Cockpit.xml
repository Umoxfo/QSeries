<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
  <path>cockpit.ac</path>

<animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>10</max-m>
    <max-property>sim/rendering/static-lod/bare</max-property>
  </animation>
  
  
    <effect>
        <inherits-from>Aircraft/QSeries/Models/Effects/panel</inherits-from>
        <object-name>tillersteerL</object-name>
        <object-name>tillersteerR</object-name>
		<object-name>hud</object-name>
		<object-name>hud.base</object-name>
		<object-name>panel.003</object-name>
		<object-name>seatP1</object-name>
		<object-name>seatP2</object-name>
		<object-name>seatCP1</object-name>
		<object-name>seatCP2</object-name>
		<object-name>somepanel</object-name>
    </effect>
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>hud.glass</object-name>
	</effect>
	
    <!--Parts-->
    <model>
	    <path>Panels.xml</path>
    </model>
<!--Tiller Steering-->
    <animation>
        <type>rotate</type>
        <object-name>tillersteerL</object-name>
        <property>gear/gear/caster-angle-deg</property>
        <factor>-0.15</factor>
		<axis>
            <x1-m>-11.67347</x1-m>
            <y1-m>-0.87988</y1-m>
            <z1-m>1.85555</z1-m>
            <x2-m>-11.61158</x2-m>
            <y2-m>-0.87988</y2-m>
            <z2-m>1.89348</z2-m>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>tillersteerR</object-name>
        <property>gear/gear/caster-angle-deg</property>
        <factor>-0.15</factor>
		<axis>
            <x1-m>-11.67347</x1-m>
            <y1-m>0.87988</y1-m>
            <z1-m>1.85555</z1-m>
            <x2-m>-11.61158</x2-m>
            <y2-m>0.87988</y2-m>
            <z2-m>1.89348</z2-m>
        </axis>
    </animation>
<!--HUD-->
	<animation>
		<type>pick</type>
		<object-name>HUD1.glass</object-name>
		<object-name>HUD1.screen</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-toggle</command>
				<property>/controls/switches/hud</property>
			</binding>
		</action>
	</animation>

	<animation>
		<type>slider</type>
		<object-name>hud</object-name>
		<drag-direction>vertical</drag-direction>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/switches/hud-flip</property>
				<factor>-0.05</factor>
				<min>0</min>
				<max>1</max>
				<wrap>0</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<label>Hud Flip: %3d%%</label>
				<measure-text>Hud Flip: 100%</measure-text>
				<tooltip-id>hud-flip</tooltip-id>
				<mapping>percent</mapping>
				<property>controls/switches/hud-flip</property>
			</binding>
		</hovered>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>hud</object-name>
		<object-name>HUD1.glass</object-name>
		<object-name>HUD1.screen</object-name>
		<property>/controls/switches/hud-flip</property>
		<factor>-65</factor>
		<center>
			<x-m>-11.96066</x-m>
			<y-m>0</y-m>
			<z-m>2.85956</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
    

	<animation>
		<type>select</type>
		<object-name>hud</object-name>
		<object-name>hud.glass</object-name>
		<condition>
			<or>
				<property>/sim/model/livery/enable-hud</property>
				<property>/sim/model/always-show-hud</property>
			</or>
		</condition>
	</animation>
	
</PropertyList>
