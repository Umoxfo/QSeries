<?xml version="1.0" encoding="ISO-8859-1"?>
<PropertyList>
	<path>PFCS.ac</path>
	<effect>
		<inherits-from>../../../Effects/panel</inherits-from>
		<object-name>PFCS.base</object-name>
		<object-name>PFCS.screws</object-name>
		<object-name>PFCS.face</object-name>
		<object-name>spoiler.lo.needle</object-name>
		<object-name>spoiler.li.needle</object-name>
		<object-name>spoiler.ro.needle</object-name>
		<object-name>spoiler.ri.needle</object-name>
		<object-name>rudder.needle</object-name>
	</effect>
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>PFCS.glass</object-name>
	</effect>
	<animation><!--TODO correct lighting property-->
		<type>material</type>
		<object-name>PFCS.face</object-name>
		<object-name>spoiler.lo.needle</object-name>
		<object-name>spoiler.li.needle</object-name>
		<object-name>spoiler.ro.needle</object-name>
		<object-name>spoiler.ri.needle</object-name>
		<object-name>rudder.needle</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/volts</property>
				<value>10</value>
			</greater-than>		
		</condition>
		<emission>
		<red>   0.50 </red>
		<green> 0.25 </green>
		<blue>  0.25 </blue>
		</emission>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>rudder.needle</object-name>
		<property>/fdm/jsbsim/fcs/yaw-sum-lag</property>
		<factor>23</factor>
		<center>
			<y-m>-0.000647</y-m>
			<z-m>-0.009634</z-m>
		</center>
		<axis>
			<x>  1 </x>
			<y>  0 </y>
			<z>  0 </z>
		</axis>
	</animation>
</PropertyList>
