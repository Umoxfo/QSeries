<PropertyList>

	<path>PFD.ac</path>
	
	<!--Interior effect-->
	<effect>
		<inherits-from>Aircraft/QSeries/Models/Effects/interior/interior-shadow</inherits-from>
		<object-name>PFD.screen</object-name>
		<object-name>PFD.avail_screen</object-name>
	</effect>
	
	<animation>
		<type>select</type>
		<object-name>PFD.avail_screen</object-name>
		<condition>
			<equals>
				<property>/instrumentation/mfd[1]/inputs/main-page</property>
				<value>pfd</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>PFD.screen</object-name>
		<condition>
			<not-equals>
				<property>/instrumentation/mfd[1]/inputs/main-page</property>
				<value>pfd</value>
			</not-equals>
		</condition>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>PFD.screen</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>canvas_pfd.showPFD();</script>
			</binding>
		</action>
	</animation>
	
	
	<animation>
		<type>material</type>
		<object-name>PFD.screen</object-name>
		<ambient>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/instrumentation/pfd[1]/brt</factor-prop>
		</ambient>
		<diffuse>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/instrumentation/pfd[1]/brt</factor-prop>
		</diffuse>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/instrumentation/pfd[1]/brt</factor-prop>
		</emission>
	</animation>
    
</PropertyList>
