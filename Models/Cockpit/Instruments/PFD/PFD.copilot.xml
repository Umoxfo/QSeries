<PropertyList>

	<path>PFD.ac</path>
	
	<!--Interior effect-->
	<effect>
		<inherits-from>Aircraft/Q400/Models/Effects/interior/interior-shadow</inherits-from>
		<object-name>PFD.screen</object-name>
	</effect>
	
	<animation>
		<type>pick</type>
		<object-name>PFD.screen</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>canvas_pfd.showPFD();</script>
			</binding>
		</action>
	</animation>
	
	
	<animation>
		<type>material</type>
		<object-name>PFD.screen</object-name>
		<ambient>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/instrumentation/pfd[1]/brt</factor-prop>
		</ambient>
		<diffuse>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/instrumentation/pfd[1]/brt</factor-prop>
		</diffuse>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/instrumentation/pfd[1]/brt</factor-prop>
		</emission>
	</animation>
    
</PropertyList>
