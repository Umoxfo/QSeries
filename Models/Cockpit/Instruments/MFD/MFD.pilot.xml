<?xml version="1.0"?>

<PropertyList>

	<path>MFD.pilot.ac</path>
	
	<!--Interior effect-->
	<effect>
		<inherits-from>Aircraft/QSeries/Models/Effects/interior/interior-shadow</inherits-from>
		<object-name>MFDpilot.screen</object-name>
		<object-name>MFDpilot.screenED</object-name>
		<object-name>MFDpilot.screenND</object-name>
		<object-name>MFDpilot.screenPFD</object-name>
	</effect>
	
	<animation>
		<type>select</type>
		<object-name>MFDpilot.screen</object-name>
		<condition>
			<equals>
				<property>/instrumentation/mfd[0]/inputs/main-page</property>
				<value>sys</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>MFDpilot.screenED</object-name>
		<condition>
			<equals>
				<property>/instrumentation/mfd[0]/inputs/main-page</property>
				<value>ed</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>MFDpilot.screenND</object-name>
		<condition>
			<equals>
				<property>/instrumentation/mfd[0]/inputs/main-page</property>
				<value>nd</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>MFDpilot.screenPFD</object-name>
		<condition>
			<equals>
				<property>/instrumentation/mfd[0]/inputs/main-page</property>
				<value>pfd</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>MFDpilot.screen</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>canvas_mfd.showMFDpilot();</script>
			</binding>
		</action>
	</animation>

	<animation>
		<type>material</type>
		<object-name>MFDpilot.screen</object-name>
		<object-name>MFDpilot.screenED</object-name>
		<object-name>MFDpilot.screenND</object-name>
		<object-name>MFDpilot.screenPFD</object-name>
		<ambient>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/instrumentation/mfd[0]/brt</factor-prop>
		</ambient>
		<diffuse>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/instrumentation/mfd[0]/brt</factor-prop>
		</diffuse>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/instrumentation/mfd[0]/brt</factor-prop>
		</emission>
	</animation>

</PropertyList>
