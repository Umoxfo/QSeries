<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
	<filter>
		<name>MAIN 1</name>
		<type>noise-spike</type>
		<input>
			<condition>
				<and>
					<property>engines/engine[0]/running</property>
					<property>systems/hydraulic/edp1-serviceable</property>
				</and>
			</condition>	
			<value>3000</value>
		</input>
		<input>
			<condition>
				<not>
					<and>
						<property>engines/engine[0]/running</property>
						<property>systems/hydraulic/edp1-serviceable</property>
					</and>
				</not>
			</condition>	
			<property>systems/hydraulic/psi-stby-1</property>
		</input>
		<max-rate-of-change>150</max-rate-of-change>
		<output>systems/hydraulic/psi-main-1</output>
	</filter>
	<filter>
		<name>MAIN 2</name>
		<type>noise-spike</type>
		<input>
			<condition>
				<and>
					<property>engines/engine[1]/running</property>
					<property>systems/hydraulic/edp2-serviceable</property>
				</and>
			</condition>	
			<value>3000</value>
		</input>
		<input>
			<condition>
				<not>
					<or>
						<and>
							<property>engines/engine[1]/running</property>
							<property>systems/hydraulic/edp2-serviceable</property>
						</and>
						<property>controls/hydraulic/ptu</property>
					</or>
				</not>
			</condition>	
			<property>systems/hydraulic/psi-stby-2</property>
		</input>
		<input>
			<condition>
				<property>controls/hydraulic/ptu</property>
				<greater-than>
					<property>systems/hydraulic/psi-main-1</property>
					<property>systems/hydraulic/psi-main-2</property>
				</greater-than>
			</condition>	
			<property>systems/hydraulic/psi-main-1</property>
		</input>
		<max-rate-of-change>150</max-rate-of-change>
		<output>systems/hydraulic/psi-main-2</output>
	</filter>
