		</input>
		<max-rate-of-change>150</max-rate-of-change>
		<output>systems/hydraulic/psi-edp-2</output>
	</filter>
	<filter>
		<name>STBY 1</name>
		<type>noise-spike</type>
		<input>
			<condition>
				<property>systems/hydraulic/spu1-serviceable</property>
				<property>controls/hydraulic/spu1_act</property>
			</condition>	
			<value>3000</value>
		</input>
		<input>
			<condition>
				<not>
					<and>
						<property>systems/hydraulic/spu1-serviceable</property>
						<property>controls/hydraulic/spu1_act</property>
					</and>
				</not>
			</condition>
			<value>0</value>
		</input>
		<max-rate-of-change>150</max-rate-of-change>
		<output>systems/hydraulic/psi-stby-1</output>
	</filter>
	<filter>
