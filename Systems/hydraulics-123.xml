			<condition>
				<property>engines/engine[0]/running</property>
				<property>systems/hydraulic/edp1-serviceable</property>
			</condition>	
			<value>3000</value>
		</input>
		<input>
			<condition>
				<not>
					<and>
						<property>engines/engine[0]/running</property>
						<property>systems/hydraulic/edp1-serviceable</property>
					</and>
				</not>
			</condition>
			<value>0</value>
		</input>
		<max-rate-of-change>150</max-rate-of-change>
		<output>systems/hydraulic/psi-edp-1</output>
	</filter>
	<filter>
		<name>EDP 2</name>
		<type>noise-spike</type>
		<input>
			<condition>
				<property>engines/engine[1]/running</property>
				<property>systems/hydraulic/edp2-serviceable</property>
			</condition>	
			<value>3000</value>
		</input>
		<input>
			<condition>
				<not>
					<and>
						<property>engines/engine[1]/running</property>
						<property>systems/hydraulic/edp2-serviceable</property>
					</and>
				</not>
			</condition>
