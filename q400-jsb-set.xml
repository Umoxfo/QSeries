			</cyan>
			<blue>
				<r type="float">0.0</r>
				<g type="float">0.0</g>
				<b type="float">0.9</b>
				<a type="float">1.0</a>
			</blue>
			<magenta>
				<r type="float">0.9</r>
				<g type="float">0.0</g>
				<b type="float">0.9</b>
